<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="28sp"
            android:textColor="@color/accent_orange"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="24dp" />

        <!-- Button Configuration -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/button_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUTTONS"
                    android:textSize="12sp"
                    android:textColor="@color/accent_orange"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap a button below to configure label and mode"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvButtonCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button Count: 16"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/sliderButtonCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="15"
                    android:progress="15"
                    android:layout_marginBottom="16dp" />

                <!-- Button Grid for Configuration -->
                <GridLayout
                    android:id="@+id/buttonConfigGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:alignmentMode="alignBounds">
                    <!-- Buttons added programmatically -->
                </GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Speed Unit -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/button_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPEED UNIT"
                    android:textSize="12sp"
                    android:textColor="@color/accent_orange"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/spinnerSpeedUnit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Data Rate -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/button_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATA RATE"
                    android:textSize="12sp"
                    android:textColor="@color/accent_orange"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polling speed for ECU variables (Hz)"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvDataRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Hz"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/sliderDataRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="59"
                    android:progress="19" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1 Hz"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60 Hz"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Variable Search -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/button_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GAUGES"
                    android:textSize="12sp"
                    android:textColor="@color/accent_orange"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add gauges to your dashboard"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp" />

                <!-- Quick Add GPS Speed -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddGpsSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Add GPS Speed"
                    android:textColor="@color/accent_orange"
                    app:backgroundTint="@color/bg_surface"
                    app:strokeColor="@color/accent_orange"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_mylocation"
                    app:iconTint="@color/accent_orange"
                    android:layout_marginBottom="8dp" />

                <!-- Add ECU Variable Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddEcuVariable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Add ECU Variable"
                    android:textColor="@color/bg_dark"
                    app:backgroundTint="@color/accent_orange"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@color/bg_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Gauges:"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGauges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ECU ID -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_dark"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/button_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ECU"
                    android:textSize="12sp"
                    android:textColor="@color/accent_orange"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ECU ID"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/etEcuId"
                        android:layout_width="80dp"
                        android:layout_height="48dp"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:background="@drawable/button_selector" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
