<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark">

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_background"
            android:paddingHorizontal="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#666666" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="Search variables..."
                android:textColor="@color/white"
                android:textColorHint="#666666"
                android:background="@null"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/btnClearSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#666666"
                android:visibility="gone"
                android:contentDescription="Clear search" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Cancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:textColor="@color/accent_orange" />
    </LinearLayout>

    <!-- Position Picker -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/togglePosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPositionTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Top Row (Large)"
            android:textColor="@color/white"
            app:backgroundTint="@color/position_toggle_bg"
            app:strokeColor="@color/accent_orange"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPositionSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Secondary (Small)"
            android:textColor="@color/white"
            app:backgroundTint="@color/position_toggle_bg"
            app:strokeColor="@color/accent_orange"
            app:strokeWidth="1dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Variable Count -->
    <TextView
        android:id="@+id/tvVariableCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="0 variables"
        android:textSize="12sp"
        android:textColor="@color/text_secondary" />

    <!-- Variable List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVariables"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</LinearLayout>
